@{
    ViewData["Title"] = "Import Excel";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0"><i class="fas fa-file-import text-success me-2"></i>Import from Excel</h4>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Back
    </a>
</div>

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header-blue">
                <i class="fas fa-upload me-2"></i> Upload Excel File
            </div>
            <div class="card-body p-4">
                <form asp-action="Import" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Select Excel File (.xlsx)</label>
                        <input type="file" name="file" class="form-control"
                               accept=".xlsx,.xls" required />
                        <div class="form-text">Supported formats: .xlsx, .xls</div>
                    </div>

                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-file-import me-1"></i> Start Import
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="fas fa-info-circle text-primary me-2"></i>
                    Required Excel Columns
                </h6>
                <table class="table table-sm table-bordered small">
                    <thead class="table-light">
                        <tr><th>Column Header</th><th>Type</th></tr>
                    </thead>
                    <tbody>
                        <tr><td><code>Date</code></td><td>Date (required)</td></tr>
                        <tr><td><code>Patient Name</code></td><td>Text</td></tr>
                        <tr><td><code>Gender</code></td><td>Male / Female</td></tr>
                        <tr><td><code>File No.</code></td><td>Text</td></tr>
                        <tr><td><code>Contact No.</code></td><td>Text</td></tr>
                        <tr><td><code>Nationality</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Call Purpose</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Visit Type</code></td><td>New / Revisit</td></tr>
                        <tr><td><code>Outcome of Call</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Doctor Name</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Department</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Booked</code></td><td>Yes / No</td></tr>
                        <tr><td><code>Staff Name</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Source</code></td><td>Text (must match definitions)</td></tr>
                        <tr><td><code>Notes</code></td><td>Text</td></tr>
                    </tbody>
                </table>
                <div class="alert alert-warning py-2 small mb-0">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Lookup values must exactly match the names defined in Definitions.
                    Rows with invalid dates will be skipped.
                </div>
            </div>
        </div>
    </div>
</div>
